<h2>My Tasks</h2>
<ol class="text-decoration-none">
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task), class: 'text-decoration-none' %>
    <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'text-decoration-none' , class: 'text-decoration-none'%></li>
  <% end %>
</ol>

<%= link_to "Add a new Task", new_task_path, class: 'text-decoration-none'%>
